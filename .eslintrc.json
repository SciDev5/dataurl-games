{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn",4],
        "quotes": ["warn","double"],
        "semi": ["warn","always"],
        "no-unused-vars": ["warn",{ "vars": "all", "args": "none", "ignoreRestSiblings": false }]
    }
}
